{
    "name": "open-telemetry/opentelemetry-php",
    "type": "library",
    "license": "Apache-2.0",
    "require": {
        "php": "^7.1",
        "ramsey/uuid": "~3",
        "psr/log": "^1.0",
        "psr/cache": "^1.0",
        "cache/adapter-common": "^1.0",
        "cache/memcached-adapter": "^1.0.0"

    },
    "suggest": {
        "cache/apcu-adapter": "Enable QpsSampler to use apcu cache.",
        "cache/apc-adapter": "Enable QpsSampler to use apc cache.",
        "cache/memcached-adapter": "Enable QpsSampler to use memcached cache."
    },
    "authors": [
        {
            "name": "Bob Strecansky",
            "email": "bob.strecansky@gmail.com"
        },
        {
            "name": "Dmitry Krokhin",
            "email": "nekufa@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "OpenTelemetry\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "": "tests"
        },
        "classmap": ["tests"]
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5.16",
        "composer/xdebug-handler": "^1.3",
        "squizlabs/php_codesniffer": "2.*",
        "twig/twig": "~2.0 || ~1.35",
        "symfony/yaml": "~3.3",
        "guzzlehttp/guzzle": "~5.3",
        "guzzlehttp/psr7": "~1.4"
    }
}
